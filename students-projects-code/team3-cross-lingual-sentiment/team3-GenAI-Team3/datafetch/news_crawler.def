Bootstrap: docker
From: ubuntu:22.04

%labels
    Author Shunqiang Feng
    Version v1.0
    Description "Multilingual News Crawler for NLP project"

%post
    apt-get update && apt-get install -y \
        python3 \
        python3-pip \
        curl \
        git \
        build-essential \
        && rm -rf /var/lib/apt/lists/*

    pip3 install --no-cache-dir \
        requests \
        beautifulsoup4 \
        lxml \
        tqdm

%environment
    export LANG=C.UTF-8
    export LC_ALL=C.UTF-8
    export PYTHONUNBUFFERED=1

%runscript
    cd /mnt
    exec python3 main.py "$@"
